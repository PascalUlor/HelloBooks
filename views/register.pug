form.form-horizontal(action='', method='POST')
  fieldset
    #legend
      legend Register
    .control-group
      label.control-label(for='username') Username
      .controls
        input#username.form-control.input-lg(type='text', name='username', placeholder='')
        p.help-block Username can contain any letters or numbers, without spaces
    .control-group
      label.control-label(for='email') E-mail
      .controls
        input#email.form-control.input-lg(type='email', name='email', placeholder='')
        p.help-block Please provide your E-mail
    .control-group
      label.control-label(for='password') Password
      .controls
        input#password.form-control.input-lg(type='password', name='password', placeholder='')
        p.help-block Password should be at least 6 characters
    .control-group
      label.control-label(for='password_confirm') Password (Confirm)
      .controls
        input#password_confirm.form-control.input-lg(type='password', name='password_confirm', placeholder='')
        p.help-block Please confirm password
    .control-group
      // Button
      .controls
        button.btn.btn-success Register
